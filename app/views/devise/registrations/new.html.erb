<% provide :title, t("devise.registrations.title") %>
<div class="top-content">
  <div class="inner-bg">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
          <h1><strong><%= t "devise.registrations.beauty" %></strong>
            <%= t "devise.registrations.title" %></h1>
          <div class="description">
            <p><%= t "devise.registrations.welcome" %></p>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
          <div class="form-top">
            <div class="form-top-left">
              <h3><%= t "devise.registrations.sign_up" %></h3>
                <p><%= t "devise.registrations.content" %></p>
            </div>
          </div>
          <div class="form-bottom">
            <%= form_for resource, as: resource_name,
              url: registration_path(resource_name) do |f| %>
              <%= devise_error_messages! %>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true,
                  placeholder: t("devise.registrations.email"),
                  class: "form-email form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password,
                  placeholder: t("devise.registrations.password"),
                  class: "form-password form-control" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation,
                  placeholder: t("devise.registrations.confirm_pass"),
                  class: "form-password form-control" %>
              </div>
              <div class="form-group">
                <%= f.fields_for :profile do |p| %>
                  <%= p.text_field :name,
                    placeholder: t("devise.registrations.name"),
                    class: "form-password form-control" %>
                <% end %>
              </div>
              <div class="form-group">
                <div class="actions">
                  <%= f.submit t("devise.registrations.title"),
                    class: "btn form-control" %>
                </div>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
